@model Milestone1.Models.CourseMember

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>CourseMember</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label id="courseId" name="courseId" class="control-label">Course Id</label>
                <input id="courseId" name ="courseId"class="form-control" value="@Model.courseId" disabled/>
            </div>
            <div class="form-group">
                <label id="memberId" name="memberId" class="control-label">Member id</label>
                <input id="memberId" name="memberId" class="form-control" value="@Model.courseId" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="day" class="control-label"></label>
                <select id="day" name="day" class="form-control" >
                    <option value="Monday"> Monday</option>
                    <option value="Tuesday"> Tuesday</option>
                    <option value="Wednesday"> Wednesday</option>
                    <option value="Thursday"> Thursday</option>
                    <option value="Friday"> Friday</option>
                    <option value="Satuiday"> Satuiday</option>
                    <option value="Sunday"> Sunday</option>
                </select>
                <span asp-validation-for="day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
