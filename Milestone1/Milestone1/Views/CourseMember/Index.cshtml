@model IEnumerable<Milestone1.Models.CourseMember>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.day)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.day)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { courseId = item.courseId, memberId = item.memberId }) |
                @Html.ActionLink("Details", "Details", new { courseId = item.courseId, memberId = item.memberId })  |
                @Html.ActionLink("Delete", "Delete", new { courseId = item.courseId, memberId = item.memberId }) 
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
